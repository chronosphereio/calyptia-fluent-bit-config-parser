{
  "name": "@calyptia/fluent-bit-config-parser",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/calyptia/fluent-bit-config-parser.git"
  },
  "license": "Apache-2.0",
  "version": "1.3.1",
  "description": "fluent-bit config parser for js/ts",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest",
    "build": "esbuild --bundle ./index.ts --platform=node --target=node12 --main-fields=main --outdir=dist",
    "lint": "eslint src/* --ext .ts",
    "build-types": "tsc --emitDeclarationOnly --outDir types",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "release": "npm run build && npm run build-cli && npm publish"
  },
  "engines": {
    "node": ">12.0.0"
  },
  "keywords": [
    "fluent-bit",
    "node"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "pretty-quick --staged"
    ],
    "*.ts": [
      "eslint --fix",
      "bash -c \"npm run build\""
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "quotes": [
        2,
        "single",
        "avoid-escape"
      ],
      "no-debugger": "error",
      "no-process-env": "off",
      "import/prefer-default-export": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "Injectable",
            "Inject"
          ]
        }
      ],
      "prefer-destructuring": [
        "error",
        {
          "VariableDeclarator": {
            "array": false,
            "object": true
          },
          "AssignmentExpression": {
            "array": true,
            "object": false
          }
        },
        {
          "enforceForRenamedProperties": false
        }
      ]
    }
  },
  "author": "Gago <xeroice@gmail.com>",
  "dependencies": {
    "debug": "4.3.3",
    "moo": "^0.5.1",
    "table": "^6.8.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/jest": "26.0.24",
    "@types/moo": "^0.5.5",
    "@types/node": "16.11.12",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "ajv-keywords": "5.1.0",
    "auto-changelog": "2.3.0",
    "bufferutil": "4.0.5",
    "esbuild": "0.14.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "8.0.3",
    "jest": "26.6.3",
    "jest-mock-process": "1.4.1",
    "jest-serializer-path": "^0.1.15",
    "lint-staged": "13.2.1",
    "prettier": "2.5.1",
    "prettier-eslint": "13.0.0",
    "prettier-eslint-cli": "5.0.1",
    "pretty-quick": "3.1.2",
    "ts-jest": "26.5.6",
    "ts-node": "^9.1.1",
    "tslib": "2.3.1",
    "typescript": "4.5.2",
    "utf-8-validate": "5.0.4"
  },
  "bugs": {
    "url": "https://github.com/calyptia/fluent-bit-config-parser/issues"
  },
  "homepage": "https://github.com/calyptia/fluent-bit-config-parser#readme"
}
